{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
